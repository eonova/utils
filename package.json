{
  "name": "@eonova/utils",
  "version": "0.0.4",
  "type": "module",
  "description": "Opinionated collection of common JavaScript / TypeScript utils by @eonova",
  "packageManager": "pnpm@10.2.1",
  "author": "Nova Eon <https://github.com/eonova>",
  "homepage": "https://github.com/eonova/utils#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eonova/utils.git"
  },
  "bugs": {
    "url": "https://github.com/eonova/utils/issues"
  },
  "keywords": [
    "utils"
  ],
  "sideEffects": false,
  "exports": {
    ".": "./dist/index.mjs"
  },
  "main": "dist/index.mjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.mts",
  "files": [
    "dist"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-emoji"
    }
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "src/**/*.{js,vue}": [
      "eslint --fix",
      "git add ."
    ]
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "build": "unbuild",
    "dev": "unbuild --stub",
    "lint": "eslint .",
    "lint-fix": "nr lint --fix",
    "prepublishOnly": "pnpm run build",
    "release": "bumpp && pnpm publish",
    "start": "tsx src/index.ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest"
  },
  "devDependencies": {
    "@eonova/eslint-config": "^0.3.0",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "@vitest/ui": "^1.1.1",
    "bumpp": "^9.2.1",
    "chalk": "^5.3.0",
    "commitizen": "^4.3.0",
    "cz-emoji": "1.3.2-canary.2",
    "eslint": "^8.56.0",
    "esno": "^4.0.0",
    "lint-staged": "^16.0.0",
    "rollup": "^4.9.2",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-esbuild": "^6.1.0",
    "simple-git-hooks": "^2.12.1",
    "taze": "^19.0.4",
    "typescript": "^5.3.3",
    "unbuild": "^3.5.0",
    "vitepress": "1.0.0-rc.34",
    "vitest": "^1.1.1"
  },
  "dependencies": {
    "@types/node": "^20.10.6"
  }
}
