{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2018",
    "lib": ["esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "tslib": ["node_modules/tslib/tslib.d.ts"],
    }
  },
  "include": ["./**/**/*.ts", "./docs/.vitepress/**/*.ts", "./docs/**/**/*.vue", "./types/*.ts", "play/*.ts"],
  "exclude": ["**/node_modules", "**/dist"]
}
